{
  "index_patterns": ["review*"],
  "template": {
    "settings": {
      "index": {
         "max_ngram_diff": 50
      },
      "number_of_shards": 2,
      "number_of_replicas": 1,
      "analysis": {
        "tokenizer": {
          "my_nori_tokenizer": {
            "type": "nori_tokenizer",
            "decompund_mode" : "mixed",
            "user_dictionary" : "userdic.txt"
          },
          "my_ngram_tokenizer": {
            "type": "ngram",
            "min_gram": 2,
            "max_gram": 4,
            "token_chars": [
              "letter",
              "digit"
            ]
          }
        },
        "analyzer": {
          "nori": {
            "tokenizer": "my_nori_tokenizer",
            "filter": [
              "nori_posfilter",
              "nori_readingform",
              "lowercase",
              "synonym_filtering"
            ]
          },
          "ngram": {
            "tokenizer": "my_ngram_tokenizer"
          }
        },
        "filter": {
          "nori_posfilter": {
            "type": "nori_part_of_speech",
            "stoptags": [
              "E",
              "IC",
              "J",
              "SP",
              "SSC",
              "SSO",
              "SC",
              "SE"
            ]
          },
          "synonym_filtering": {
            "type": "synonym",
            "synonyms_path": "synonym.txt"
          }
        }
      }
    },
      "mappings": {
        "_source": {
          "enabled": true
        },
        "properties": {
          "movie_id" : {
            "type": "keyword"
          },
          "review_score": {
            "type": "integer"
          },
          "review_id": {
            "type": "keyword"
          },
          "review_txt": {
            "type": "text",
            "analyzer": "nori",
            "search_analyzer": "nori"
          }
        }
      },
      "aliases": {
        "mydata": { }
      }
    },
    "priority": 500,
    "version": 3,
    "_meta": {
      "description": "my custom"
    }
  }