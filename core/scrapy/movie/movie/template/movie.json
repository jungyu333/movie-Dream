{
  "index_patterns": ["movie*"],
  "template": {
    "settings": {
      "index": {
        "max_ngram_diff": 50
      },
      "number_of_shards": 2,
      "number_of_replicas": 1,
      "analysis": {
        "tokenizer": {
          "my_nori_tokenizer": {
            "type": "nori_tokenizer",
            "decompund_mode": "mixed",
            "user_dictionary": "userdic.txt"
          },
          "my_ngram_tokenizer": {
            "type": "ngram",
            "min_gram": 2,
            "max_gram": 4,
            "token_chars": ["letter", "digit"]
          }
        },
        "analyzer": {
          "nori": {
            "tokenizer": "my_nori_tokenizer",
            "filter": [
              "nori_posfilter",
              "nori_readingform",
              "lowercase",
              "synonym_filtering"
            ]
          },
          "ngram": {
            "tokenizer": "my_ngram_tokenizer"
          }
        },
        "filter": {
          "nori_posfilter": {
            "type": "nori_part_of_speech",
            "stoptags": ["E", "IC", "J", "SP", "SSC", "SSO", "SC", "SE"]
          },
          "synonym_filtering": {
            "type": "synonym",
            "synonyms_path": "synonym.txt"
          }
        }
      }
    },
    "mappings": {
      "_source": {
        "enabled": true
      },
      "properties": {
        "h_movie": {
          "type": "text",
          "analyzer": "nori",
          "search_analyzer": "nori"
        },
        "h_movie2": {
          "type": "keyword"
        },
        "h_movie3": {
          "type": "keyword"
        },
        "genre": {
          "type": "keyword"
        },
        "movie_img": {
          "type": "keyword"
        },
        "opening_date": {
          "type": "date",
          "format": ["yyyy.MM.dd", "yyyy.MM", "yyyy"]
        },
        "nation": {
          "type": "keyword"
        },
        "movie_poster": {
          "type": "keyword"
        },
        "state": {
          "type": "keyword"
        },
        "movie_actor": {
          "type": "nested",
          "properties": {
            "part": {
              "type": "keyword"
            },
            "name": {
              "type": "keyword"
            },
            "thumb": {
              "type": "keyword"
            }
          }
        },
        "movie_director": {
          "type": "keyword"
        },
        "movie_director_thumb": {
          "type": "keyword"
        },
        "show_time": {
          "type": "integer"
        },
        "movie_id": {
          "type": "keyword"
        },
        "movie_photo": {
          "type": "keyword"
        },
        "movie_story": {
          "type": "text",
          "analyzer": "nori",
          "search_analyzer": "nori"
        },
        "movie_video": {
          "type": "keyword"
        }
      }
    },
    "aliases": {
      "mydata": {}
    }
  },
  "priority": 500,
  "version": 3,
  "_meta": {
    "description": "my custom"
  }
}
